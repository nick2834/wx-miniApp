.page{
  position: relative;
}
.tag_view{
  white-space: nowrap;
  display: flex
}
.scroll-view-item{
  /* background: red;  */
  width: 200rpx; 
  height: 100rpx; 
  display: inline-block;
  margin-right: 10px;
  cursor: pointer;
  position: relative
}
.scroll-view-item:last-child{
  margin: 0
}
.bc_green{
  background: green
}
.bc_red{
  background: red
}
.bc_yellow{
  background: yellow
}
.bc_blue{
  background: blueviolet
}
.bc_orange{
  background: orange
}
.tag_name{
  position: absolute;
  top: 0;left: 0;right: 0;bottom: 0;
  line-height: 100rpx;
  text-align: center;
  display: block;
  width: inherit;
  background: rgba(0, 0, 0, .5);
  color: #fff;
  font-size: .6rem;
  overflow: hidden;
  padding: 0 10px;
  box-sizing: border-box
}
.weui-form-preview{
  margin-bottom: 10px;
  background: #fff;
}
.weui-form-preview__bd{
  padding: 0;
  line-height: 0
}
.weui-form-preview__hd{
  text-align: left;
  height: 45px;
  padding: 5px 10px;
}
.image_cover{
  width: 100%;
  height: 360rpx;
  position: relative;
}
.video_btn{
  position: absolute;
  top:50%;
  left: 50%;
  width: 50px;
  height: 50px;
  transform: translate(-50%,-50%)
}
.title{
  padding: 5px;
  font-size: 14px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis
}
.user_icon{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #fff;
  position: fixed;
  bottom: 20px;
  right: 20px;
  color: #dd2323;
  box-shadow: 3px 3px 15px #333;
  text-align: center;
  line-height: 100rpx;
  font-size: 1.3em
}
.weui-form-preview__ft {
  padding: 5px;
  overflow: hidden;
  justify-content: space-between;
}
.ft_left_above,.ft_left_down{
  line-height: 26px;
  font-size: 22rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.license{
  float: left;
  max-width: 50%;
  margin-right: 5px;
}
.tags{
  float: left;
  max-width: 50%;
  margin-right: 5px;
}
.ft_left{
  width: 80%;
}
.ft_right{
  width: 20%;
  line-height: 26px;
  font-size: 20rpx;
  display: flex;
  justify-content: space-between;
  color: #333
}
.ft_right >view{
  width: 50%;
}