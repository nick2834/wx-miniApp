.user_bg{
  width: 100%;
  height: 400rpx;
  background: #4F4F57;
  position: relative;
}
.mine_user_avatar{
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  border-radius: 50%;
  border:1px solid #333;
  left: 50%;
  top: 40%;
  transform: translate(-50%,-50%)
}
.introduction{
  position: absolute;
  bottom: 10px;
  text-align: center;
  width: 100%;
  color: #fff;
  font-size: 26rpx;
  padding:20px;
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis
}
.nickname{
  bottom: 40px;
}
.user_head_title{
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  background: #fff;
  border-bottom: 1px solid #F0F0F0
}
.weui-grid{
  border: none;
  padding: 15px;
}
.weui-grid__icon{
  width: 100%;
  border-radius: 15px;
  position: relative;
}
.media_icon_btn{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 30px;
  height: 30px;
  transform: translate(-50%,-50%)
}
.check-box{
  position: relative
}
.check-login{
  text-align: center;
  position: absolute;
  width: 100%;
  transition: all 800ms
}
.wechat-login{
  top: 0;
  background: #4F4F57
}
.phone-login{
  bottom: 0;
  background: #4F4F57
}
.check-wechat-active{
  top: -1000px !important
}
.check-phone-active{
  top: 1000px !important
}
.check-icon{
  position: absolute;
  bottom: 0;
  width: 100%;
}
.placeholder{
  font-size: 4rem
}
.media_text{
  position: absolute;
  width: 100%;
  height: 100%; 
  top: 50%;
  left: 50%;
  color: #fff;
  transform: translate(-50%,-50%);
  background: rgba(0, 0, 0, .5);
  font-size: 22rpx;
  display: table;
}
.text{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; 
  vertical-align:middle;  
  display:table-cell;
  padding: 10px 10px;
  box-sizing: border-box;
  width: inherit;
}